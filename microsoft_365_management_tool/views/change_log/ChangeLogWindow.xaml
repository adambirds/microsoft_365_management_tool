<Window

  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

  Title="Microsoft 365 Management Tool | Change Log"
        SizeToContent="WidthAndHeight"
        Background="Gray"
        ResizeMode="CanMinimize"
        Icon="https://adbwebdesigns.co.uk/static/microsoft-365-icon.ico"
>
    <Grid Margin="0">
        <Grid Margin="10" Height="350" Width="500">
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Top">
                <TextBox x:Name="ChangeLogTextBox" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Center" Text="" VerticalAlignment="Top" Width="500" Height="313" IsEnabled="False"/>
            </StackPanel>
            <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="25"/>
        </Grid>
    </Grid>
</Window>